{{!< layouts/main }}
<div class="ml-64">
  <div class="p-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Dashboard</h2>
    
    <!-- Añadir botones de acceso rápido -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
      <a href="/properties" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-4 rounded-lg">
        Gestión de Predios
      </a>
      <button id="go-to-upload" class="bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg">
        Subir Documentos
      </button>
    </div>
    
    <!-- Resto del contenido del dashboard -->
  </div>
</div>

<!-- Contenido principal -->
<div class="ml-64 p-8">
  <div id="dashboard">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-bold text-gray-800">Tablero de Control</h2>
      <div class="flex items-center">
        <span class="mr-2 text-gray-600">Bienvenido, {{usuario.email}}</span>
        <div class="bg-blue-600 text-white rounded-full h-8 w-8 flex items-center justify-center">
          {{usuario.email.[0]}}
        </div>
      </div>
    </div>
    
    <!-- Tarjetas de estadísticas -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-blue-500">
        <div class="flex justify-between items-center">
          <div>
            <p class="text-gray-500 text-sm">Documentos Totales</p>
            <h3 class="text-2xl font-bold text-gray-800">{{totalDocumentos}}</h3>
          </div>
          <div class="bg-blue-100 p-3 rounded-full">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-green-500">
        <div class="flex justify-between items-center">
          <div>
            <p class="text-gray-500 text-sm">Predios Registrados</p>
            <h3 class="text-2xl font-bold text-gray-800">{{totalPredios}}</h3>
          </div>
          <div class="bg-green-100 p-3 rounded-full">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-purple-500">
        <div class="flex justify-between items-center">
          <div>
            <p class="text-gray-500 text-sm">Usuarios Activos</p>
            <h3 class="text-2xl font-bold text-gray-800">7</h3>
          </div>
          <div class="bg-purple-100 p-3 rounded-full">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Actividad reciente -->
    <div class="bg-white rounded-lg shadow-md">
      <div class="border-b px-6 py-4">
        <h3 class="text-lg font-semibold text-gray-800">Actividad Reciente</h3>
      </div>
      <div class="p-6">
        {{#if historialActividad.length}}
          <div class="flow-root">
            <ul class="-mb-8">
              {{#each historialActividad}}
                <li>
                  <div class="relative pb-8">
                    <span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200"></span>
                    <div class="relative flex space-x-3">
                      <div>
                        <span class="h-8 w-8 rounded-full {{#if (eq action 'create')}}bg-blue-500{{else if (eq action 'update')}}bg-green-500{{else if (eq action 'delete')}}bg-red-500{{else if (eq action 'upload')}}bg-yellow-500{{else}}bg-gray-500{{/if}} flex items-center justify-center ring-8 ring-white">
                          <!-- You can add icons here based on action or type -->
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" viewBox="0 0 20 20" fill="currentColor">
                            {{#if (eq action 'create')}}
                              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd" />
                            {{else if (eq action 'update')}}
                              <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                            {{else if (eq action 'delete')}}
                              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM7 9a1 1 0 000 2h6a1 1 0 100-2H7z" clip-rule="evenodd" />
                            {{else if (eq action 'upload')}}
                              <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
                            {{else}}
                              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                            {{/if}}
                          </svg>
                        </span>
                      </div>
                      <div class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4">
                        <div>
                          <p class="text-sm text-gray-500">
                            Acción: <span class="font-medium text-gray-900">{{this.action}}</span> en {{this.type}} <span class="font-medium text-gray-900">"{{this.itemName}}"</span>.
                            {{#if this.details.message}}
                              <span class="block text-xs text-gray-400">{{this.details.message}}</span>
                            {{/if}}
                          </p>
                        </div>
                        <div class="text-right text-sm whitespace-nowrap text-gray-500">
                          <time datetime="{{this.timestamp}}">{{formatDate this.timestamp}}</time>
                        </div>
                      </div>
                    </div>
                  </div>
                </li>
              {{/each}}
            </ul>
          </div>
        {{else}}
          <p class="text-center text-gray-500">Sin cambios recientes para empezar a registrar los cambios.</p>
        {{/if}}
      </div>
    </div>
  </div>
</div>

<script>
  // Función para expandir/colapsar carpetas
  function toggleFolder(folderId) {
    const folderContent = document.getElementById(`${folderId}-content`);
    const folderIcon = document.getElementById(`${folderId}-icon`);
    
    if (folderContent.classList.contains('hidden')) {
      folderContent.classList.remove('hidden');
      folderIcon.setAttribute('d', 'M2 6a2 2 0 012-2h5l2 2h5a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V6z');
    } else {
      folderContent.classList.add('hidden');
      folderIcon.setAttribute('d', 'M5 3a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2V5a2 2 0 00-2-2H5zm0 2h10v10H5V5z');
    }
  }
  
  // Cerrar sesión
  document.getElementById('logout-btn').addEventListener('click', function(e) {
    e.preventDefault();
    // Eliminar token
    localStorage.removeItem('token');
    sessionStorage.removeItem('token');
    // Redireccionar al login
    window.location.href = '/';
  });
  
  // Enlace de subida de documentos con token
  document.getElementById('upload-link').addEventListener('click', function(e) {
    e.preventDefault();
    const token = localStorage.getItem('token');
    if (token) {
      window.location.href = `/upload`;
    } else {
      alert('No se encontró un token de autenticación. Por favor, inicie sesión nuevamente.');
      window.location.href = '/';
    }
  });
</script>

